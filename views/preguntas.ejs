<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <title>Gestión de Preguntas</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="p-4">
  <h2 class="mb-4">📋 Lista de Preguntas</h2>

  <form action="/preguntas/agregar" method="POST" class="row g-3 mb-4">
    <div class="col-md-3">
      <input name="tema" class="form-control" placeholder="Tema" required />
    </div>
    <div class="col-md-3">
      <input name="pregunta" class="form-control" placeholder="Pregunta" required />
    </div>
    <div class="col-md-3">
      <input name="explicacion" class="form-control" placeholder="Explicación (opcional)" />
    </div>
    <div class="col-md-2">
      <input name="link_opcional" class="form-control" placeholder="Link (opcional)" />
    </div>
    <div class="col-md-1">
      <button type="submit" class="btn btn-primary w-100">➕</button>
    </div>
  </form>

  <table class="table table-bordered table-hover">
    <thead>
      <tr>
        <th>#</th>
        <th>Tema</th>
        <th>Pregunta</th>
        <th>Explicación</th>
        <th>Link</th>
        <th>Acciones</th>
      </tr>
    </thead>
    <tbody>
      <% preguntas.forEach(p => { %>
        <tr>
          <form action="/preguntas/editar/<%= p.idpregunta %>" method="POST">
            <td><%= p.idpregunta %></td>
            <td><input name="tema" class="form-control" value="<%= p.tema %>"/></td>
            <td><input name="pregunta" class="form-control" value="<%= p.pregunta %>"/></td>
            <td><input name="explicacion" class="form-control" value="<%= p.explicacion %>"/></td>
            <td><input name="link_opcional" class="form-control" value="<%= p.link_opcional %>"/></td>
            <td>
              <div class="d-flex gap-2">
                <button class="btn btn-warning btn-sm">✏️</button>
              </div>
          </form>
          <form action="/preguntas/eliminar/<%= p.idpregunta %>" method="POST">
              <button class="btn btn-danger btn-sm" onclick="return confirm('¿Seguro que deseas eliminar?')">🗑️</button>
          </form>
            </td>
        </tr>
      <% }) %>
    </tbody>
  </table>
</body>
</html>
